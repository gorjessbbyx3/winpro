modules = ["php-8.2", "web", "ruby-3.2", "nodejs-20", "postgresql-16"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["redis"]

[userenv]

[userenv.shared]
DB_CONNECTION = "pgsql"
APP_ENV = "local"
APP_DEBUG = "true"
APP_URL = "http://localhost:5000"
CACHE_DRIVER = "redis"
SESSION_DRIVER = "redis"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Laravel App"

[[workflows.workflow]]
name = "Laravel App"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "php -S 0.0.0.0:5000 -t public"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 33053
externalPort = 3001

[[ports]]
localPort = 41969
externalPort = 3000

[deployment]
deploymentTarget = "autoscale"
run = ["php", "-S", "0.0.0.0:5000", "-t", "public"]
